<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_marginBottom="@dimen/joke_content_margin_bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:textSize="@dimen/joke_title_size"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/joke_content_margin_top"
                android:textColor="@color/black"
                android:background="@color/lightgray2"
                android:layout_height="wrap_content" />

            <TextView
                android:background="@color/whitesmoke"
                android:id="@+id/content"
                android:textColor="@color/gray"
                android:textSize="@dimen/joke_content_size"
                android:layout_marginTop="@dimen/joke_content_margin_top"
                android:paddingLeft="@dimen/joke_content_margin_left"
                android:paddingRight="@dimen/joke_content_margin_right"
                android:layout_marginBottom="@dimen/joke_content_margin_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whitesmoke"
                android:gravity="right|center_vertical"
                android:layout_marginTop="2dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:orientation="horizontal">


                <android.support.v7.internal.widget.TintImageView
                    android:id="@+id/btn_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/item_post_shoucang" />

                <android.support.v7.internal.widget.TintImageView
                    android:id="@+id/btn_share"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/book_action_share_unclick" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
